<div class="container">
    <div class="row">
        <div class="col-md-12 text-center" id="top-bar">
            <img src="/assets/images/cartoon-burger.png" alt="burger" />
            <h1> Eat-Da-Burger! </h1>
        </div>
    </div>
    <div class="row text-center burger-container" class="task">
        <div class="col-md-7">
            <div class="row">
                {{#each burgers}}
                {{#unless this.devoured}}
                <div class="col-sm-7 undevoured-burger">
                    <pre>{{this.id}}. {{this.burger_name}}
                    </pre>
                </div>

                <div class="col-sm-4 devour-btn-div">
                    <form class="devour-form button-size">
                        <input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
                        <button type="submit" class="btn btn-secondary devour-btn" data-id="{{id}}">Devour it!</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-md-4 text-center devoured-burger" class="task">
            {{#each burgers}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>

    </div>

</div>
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" class="form-control" name="burger_name" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
            </form>
            <p>Enter a burger you want to eat Click the "Submit" button.</p>
        </div>
    </div>
</div>